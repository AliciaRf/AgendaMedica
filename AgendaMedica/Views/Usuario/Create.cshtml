@model AgendaMedica.Models.Usuario
@{
    ViewData["Title"] = "Ingresar Usuarios";
}

<h1>Ingresar Usuarios</h1>
<div>
    <form asp-action="Create">
        <div>
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="NombreUs" />
        </div>
        <div>
            <label class="form-label">Usuario</label>
            <input type="text" class="form-control" asp-for="Usuario1" />
        </div>
        <div>
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-control" asp-for="Clave" />
        </div>
        <div class="mt-3 text-end">
            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
            <input type="submit" value="Guardar" class="btn btn-outline-success" />
        </div>
    </form>
</div>