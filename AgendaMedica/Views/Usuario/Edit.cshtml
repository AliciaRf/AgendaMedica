@model AgendaMedica.Models.Usuario


<h1>Editar Usuario</h1>

<div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="IdUs" />
        <div class="form-group">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="NombreUs" />
            <label class="form-label">Usuario</label>
            <input type="text" class="form-control" asp-for="Usuario1" />
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-control" asp-for="Clave" />
        </div>
        <div class="mt-3 text-end">
            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
            <input type="submit" value="Editar" class="btn btn-outline-success" />
        </div>
    </form>
</div>